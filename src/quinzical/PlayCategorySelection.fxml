<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #4fc396;" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="quinzical.PlayCategorySelectionController">
   <children>
        <Button fx:id="exit" layoutX="33.0" layoutY="340.0" mnemonicParsing="false" onAction="#onExitClick" prefHeight="40.0" prefWidth="80.0" style="-fx-background-color: black;" text="Exit" textFill="WHITE">
         <font>
            <Font name="System Bold" size="13.0" />
         </font></Button>
        <Button fx:id="startButton" layoutX="478.0" layoutY="340.0" mnemonicParsing="false" onAction="#onStartClick" prefHeight="40.0" prefWidth="80.0" style="-fx-background-color: black;" text="Start" textFill="WHITE">
         <font>
            <Font name="System Bold" size="13.0" />
         </font></Button>
        <Label layoutX="163.0" layoutY="26.0" text="Choose 5 categories">
            <font>
                <Font name="System Bold" size="25.0" />
            </font>
        </Label>
      <TableView fx:id="categoryTable" layoutX="172.0" layoutY="148.0" prefHeight="148.0" prefWidth="256.0">
        <columns>
          <TableColumn fx:id="categoryCol" prefWidth="160.0" sortable="false" text="Chosen categories" />
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
        <ComboBox fx:id="categoriesBox" layoutX="190.0" layoutY="106.0" prefHeight="26.0" prefWidth="205.0" promptText="Select a category" />
      <Button layoutX="406.0" layoutY="106.0" mnemonicParsing="false" onAction="#onAddClick" style="-fx-background-color: black;" text="Add" textFill="WHITE" />
      <Button layoutX="256.0" layoutY="314.0" mnemonicParsing="false" onAction="#onRemoveClick" style="-fx-background-color: black;" text="Remove" textFill="WHITE" />
      <Label fx:id="errorLabel" alignment="CENTER" layoutX="90.0" layoutY="56.0" prefHeight="46.0" prefWidth="420.0" textAlignment="CENTER" wrapText="true">
         <font>
            <Font size="14.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
